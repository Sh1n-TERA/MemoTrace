<!DOCTYPE html>
<html>
  <head>
    <title>MemoTrace</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  </head>

  <body>
    <!-- ヘッダーの開始 -->
    <header class="app-header">
      <div class="header-left">
        <%= link_to new_memo_path, class: "header-link" do %>
          <i class="fa-solid fa-plus"></i> 新規作成
        <% end %>
      </div>
      <div class="header-center">
        <%= link_to root_path do %>
          <h1>MemoTrace</h1>
        <% end %>
      </div>
      <div class="header-right">
        <%= link_to all_memos_path, class: "header-link" do %>
          <i class="fa-solid fa-bars"></i> 一覧
        <% end %>
        <% if user_signed_in? %>
          <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "header-button" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: "header-button" %>
          <%= link_to "新規登録", new_user_registration_path, class: "header-button" %>
        <% end %>
      </div>
    </header>
    <!-- ヘッダーの終了 -->

    <main>
      <%= yield %>
    </main>
  </body>
</html>
